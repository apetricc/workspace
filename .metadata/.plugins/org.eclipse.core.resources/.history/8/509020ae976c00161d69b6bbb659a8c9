package drawingpackage;
import csci348.drawings.Drawing;
public class DrawProgram {
	private Drawing myDrawing = new Drawing();
//Drawing myDrawing
	public DrawProgram() {
		//this.myDrawing = myDrawing;
	}
	
	public void drawHorizontalLine(int startX, int startY, int endX) {
		int length = endX - startX;
		for (int i = startX; i <= endX; i++) {
			myDrawing.showPoint(i, startY);
		}
	}//drawHorizontalLine
	
	public void drawVerticalLine(int startY, int startX, int endY) {
		for (int i = startY; i <= endY; i++) {
			myDrawing.showPoint(startX, i);
		}
	}//drawHorizontalLine
	
	public void drawSquare(int startX, int startY, int size) {
		drawHorizontalLine(startX, startY, startX+size);
		drawHorizontalLine(startX, startY+size, startX+size);
		drawVerticalLine(startY, startX, startY+size);
		drawVerticalLine(startY, startX+size, startY+size);
		
	}
	
	
	
	
	
	public void drawTop(int x) {
		int y = x;
		for (int i = x; i < 300; i++) {
			myDrawing.showPoint(++x, y);
		}
	}//drawTop
	public void drawLeftSide(int y, Drawing drawing) {
		int x = y;
		for(int i = y; i < 300; i++){
			drawing.showPoint(x, --y);
			
		}
	}//drawLeftSide
	
	public void drawBottom(int x, Drawing drawing) {
		int y = x-100;
		for (int i = x; i < 300; i++) {
			drawing.showPoint(++x, y);
		}
	}//drawTop
	
	public void drawRightSide(int y, Drawing drawing) {
		int x = y+100;
		for(int i = y; i < 300; i++){
			drawing.showPoint(x, --y);
			
		}
	}//drawLeftSide
	public void drawSquare1(int x, Drawing drawing) {
		//drawTop(x, drawing);
		drawLeftSide(x, drawing);
		drawBottom(x, drawing);
		drawRightSide(x, drawing);
		
	}//drawSquare
	
	
	
	
	/**
	 * MAIN METHOD!!
	 * @param args
	 */
	public static void main(String[] args) {
		
		
		DrawProgram draw = new DrawProgram();
		
		
		/**
		for (int i = 50; i < 400; i++) {
			myDrawing.showPoint(i, i+1);
		}
		**/
		//myDrawing.showPoint(100, 100);
		
//		drawHorizontalLine(100, myDrawing);
//		drawVerticalLine(100, myDrawing);
//		
		//drawSquare(200);
		//draw.drawTop(100);
		//draw.drawHorizontalLine(100, 50, 600);
		//draw.drawVerticalLine(50, 10, 550);
		draw.drawSquare(50, 50, 150);
	}//main

}//DrawProgram class
