package drawings2;
import csci348.drawings.SimpleDrawing;

public class Parallelogram extends SimpleDrawProgram{

	private int startX;
	private int startY;
	private int height;
	private int width;
	
	public Parallelogram(int startX, int startY, int height, int width) {
		this.startX = startX;
		this.startY = startY;
		this.height = height;
		this.width = width;
	}

	public void draw(SimpleDrawing palette) {
		int aX = startX;
		int aY = startY;
		int bX = startX + width;
		int bY = startY;
		Line bottom = new Line(aX, aY, bX, bY);
	}
	
	
	
}
