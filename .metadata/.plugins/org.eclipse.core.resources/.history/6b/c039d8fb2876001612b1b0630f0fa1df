package drawingpackage;

import csci348.drawings.Drawing;

public class HorizontalLine extends Line {

	public HorizontalLine(int startX, int startY, int endX, int endY) {
		super(startX, startY, endX, endY);
	}

	@Override
	public void draw(Drawing palette) {
		if (startX == endX)
			System.out.println("Can't draw horizontal line vertically--use vertical line.");
		if (startX < endX) {
			for (int i = startX; i <= endX; i++) {
				palette.showPoint(i, startY);
			}
		} // startX < endX
		if (startX > endX) {
			for (int i = endX; i <= startX; i++) {
				palette.showPoint(i, startY);
			}
		} // startX > endX
	}// draw

	public void erase(Drawing draw) {
		if (startX == endX)
			System.out.println("Can't draw horizontal line vertically--use vertical line.");
		if (startX < endX) {
			for (int i = startX; i <= endX; i++) {
				draw.hidePoint(i, startY);
			}
		} // startX < endX
		if (startX > endX) {
			for (int i = endX; i <= startX; i++) {
				draw.hidePoint(i, startY);
			}
		} // startX > endX
	}
}// HorizontalLine
