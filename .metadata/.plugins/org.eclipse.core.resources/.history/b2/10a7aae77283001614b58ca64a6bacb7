package SimpleStringPackage;

import static org.junit.Assert.*;

import org.junit.After;
import org.junit.AfterClass;
import org.junit.Before;
import org.junit.BeforeClass;
import org.junit.Test;

public class TesterTest {

	char[] chars = {'w', 'o', 'r', 'd'};
	
	SimpleString testString = new SimpleString(chars);
	
	@BeforeClass
	public static void setUpBeforeClass() throws Exception {
	}

	@AfterClass
	public static void tearDownAfterClass() throws Exception {
	}

	@Before
	public void setUp() throws Exception {
	}

	@After
	public void tearDown() throws Exception {
	}

	@Test
	public void testCharAt() {
		
		assertEquals(testString.charAt(0), 'w');
		try{
			testString.charAt(chars.length);
			fail("Tried to pull a charAt index out of bounds");
			
		} catch (ArrayIndexOutOfBoundsException e){
			assertTrue("Array out of bounds here",true);
		}
	}
	
	
	
	@Test
	public void testCharAtOutOfRange() {
		
		try {
		     testString.charAt(chars.length+1);
		    }
		    catch(ArrayIndexOutOfBoundsException e) {
		    	System.out.println("Index out of bounds");
		    }	
	}

}
