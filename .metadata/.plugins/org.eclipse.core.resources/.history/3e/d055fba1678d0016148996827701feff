package drawings2;

import csci348.drawings.SimpleDrawing;
import drawings2.SimpleDrawProgram;

public class Triangle extends SimpleDrawProgram{
	
	private int startX;
	private int startY;
	private int height;
	private int width;
	private int endX;
	private int endY;
	
	public Triangle(int startX, int startY, int height, int width) {
		this.startX = startX;
		this.startY = startY;
		this.height = height;
		this.width = width;
		this.endX = startX + width;
		this.endY = startY - height;
	}
/*
 * //	public Line(int startX, int startY, int endX, int endY) 
		Triangle newTriangle = new Triangle(300, 300, 50,75 );
 */
	public void drawUpTriangle(SimpleDrawing palette, SimpleDrawProgram draw) {
		width = endX - startX;
		height = endY - startY;
		Line hLine1 = new Line(startX, startY,  width, height);
		hLine1.drawBres(palette);
		Line dLine1 = new Line(startX, startY, startX + width/2, startY);
		dLine1.drawBres(palette);
		Line dLine2 = new Line(startX, startY, endX, endY);
		dLine2.drawBres(palette);
		//draw.diagram.add(this);
	}// drawUpTriangle

}
