package SimpleStringPackage;

import static org.junit.Assert.*;

import org.junit.After;
import org.junit.AfterClass;
import org.junit.Before;
import org.junit.BeforeClass;
import org.junit.Test;

public class TesterTest {

	char[] chars = {'w', 'o', 'r', 'd'};
	
	SimpleString testString = new SimpleString(chars);

	@Test
	public void testCharAt() {

		assertEquals(testString.charAt(0), 'w');
		assertEquals(testString.charAt(1), 'o');
		assertEquals(testString.charAt(2), 'r');
		assertEquals(testString.charAt(3), 'd');
		try{
			testString.charAt(chars.length);
			fail("Tried to pull a charAt index out of bounds");
			
		} catch (ArrayIndexOutOfBoundsException e) {
			assertTrue("Array out of bounds here",true);
		}
	}//testCharAt
	
	public void testContains() {
		assertEquals(testString.contains('w'),true);
		assertEquals(testString.contains('o'),true);
		assertEquals(testString.contains('r'),true);
		assertEquals(testString.contains('d'),true);
		assertEquals(testString.contains('z'),false);
		assertEquals(testString.contains('1'), false);
		
	}
	

}
